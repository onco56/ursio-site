---
const { title } = Astro.props;
import QuietHeader from "../components/QuietHeader.astro";
import QuietFooter from "../components/QuietFooter.astro";
---

<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    {title && <title>{title}</title>}

    <!-- URSIO Global Styles -->
    <link rel="stylesheet" href="/styles/tokens.css" />
    <link rel="stylesheet" href="/styles/typography.css" />
    <link rel="stylesheet" href="/styles/base.css" />
    <link rel="stylesheet" href="/styles/layout.css" />

    <!-- SEO & Custom Head Slot -->
    <slot name="head" />
  </head>

  <body class="ursio-body">
    <QuietHeader />

    <main class="ursio-main">
      <slot />
    </main>

    <QuietFooter />
  </body>
</html>

