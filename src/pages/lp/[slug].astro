---
import { getCollection, getEntryBySlug } from "astro:content";
import LandingPageLayout from "../../layouts/LandingPageLayout.astro";

export async function getStaticPaths() {
  const entries = await getCollection("lp");
  return entries.map((entry) => ({
    params: { slug: entry.slug },
  }));
}

const { slug } = Astro.params;
const entry = await getEntryBySlug("lp", slug);

if (!entry) {
  throw new Error(`Landingpage nicht gefunden: ${slug}`);
}

const { Content } = await entry.render();

const description =
  entry.data.description ??
  `Eine Landingpage auf URSIO mit dem Titel: ${entry.data.title}.`;
---

<LandingPageLayout title={entry.data.title}>
  <fragment slot="head">
    <title>URSIO – {entry.data.title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={`https://ursio.ch/lp/${slug}/`} />
    <meta property="og:title" content={`URSIO – ${entry.data.title}`} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="article" />
    <meta property="og:url" content={`https://ursio.ch/lp/${slug}/`} />
  </fragment>

  <section class="lp-page">

    <header>
      <h1>{entry.data.title}</h1>
    </header>

    <article>
      <Content />
    </article>

  </section>
</LandingPageLayout>

