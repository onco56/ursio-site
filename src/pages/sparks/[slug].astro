---
import { getCollection, getEntryBySlug } from "astro:content";
import SparkLayout from "../../layouts/SparkLayout.astro";

export async function getStaticPaths() {
  const sparks = await getCollection("sparks");
  return sparks.map((entry) => ({
    params: { slug: entry.slug },
  }));
}

const { slug } = Astro.params;
const entry = await getEntryBySlug("sparks", slug);

if (!entry) {
  throw new Error(`Spark not found: ${slug}`);
}

const { Content } = await entry.render();

// fallback description
const description =
  entry.data.description ??
  `Ein Spark auf URSIO mit dem Titel: ${entry.data.title}.`;
---

<SparkLayout title={entry.data.title}>
  <fragment slot="head">
    <title>URSIO – {entry.data.title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={`https://ursio.ch/sparks/${slug}/`} />
    <meta property="og:title" content={`URSIO – ${entry.data.title}`} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="article" />
    <meta property="og:url" content={`https://ursio.ch/sparks/${slug}/`} />
  </fragment>

  <section class="spark-page">

    <header>
      <h1>{entry.data.title}</h1>
    </header>

    <article>
      <Content />
    </article>

  </section>
</SparkLayout>

