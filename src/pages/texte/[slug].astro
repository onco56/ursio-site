---
import { getCollection, getEntryBySlug } from "astro:content";
import TextLayout from "../../layouts/TextLayout.astro";

export async function getStaticPaths() {
  const texte = await getCollection("texte");
  return texte.map((entry) => ({
    params: { slug: entry.slug },
  }));
}

const { slug } = Astro.params;
const entry = await getEntryBySlug("texte", slug);

if (!entry) {
  throw new Error(`Text not found: ${slug}`);
}

const { Content } = await entry.render();

// Fallback-Description, falls kein Feld vorhanden ist
const description =
  entry.data.description ??
  `Ein Text auf URSIO mit dem Titel: ${entry.data.title}.`;
---

<TextLayout title={entry.data.title}>
  <fragment slot="head">
    <title>URSIO – {entry.data.title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={`https://ursio.ch/texte/${slug}/`} />
    <meta property="og:title" content={`URSIO – ${entry.data.title}`} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="article" />
    <meta property="og:url" content={`https://ursio.ch/texte/${slug}/`} />
  </fragment>

  <section class="text-page">

    <header>
      <h1>{entry.data.title}</h1>
    </header>

    <article>
      <Content />
    </article>

  </section>
</TextLayout>

