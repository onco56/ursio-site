---
import { getCollection, getEntryBySlug } from "astro:content";
import ContentLayout from "../../layouts/ContentLayout.astro";

export async function getStaticPaths() {
  const tools = await getCollection("tools");
  return tools.map((entry) => ({
    params: { slug: entry.slug },
  }));
}

const { slug } = Astro.params;
const entry = await getEntryBySlug("tools", slug);

if (!entry) {
  throw new Error(`Tool not found: ${slug}`);
}

const { Content } = await entry.render();

// Fallback-Beschreibung
const description =
  entry.data.description ??
  `Ein Tool auf URSIO mit dem Titel: ${entry.data.title}.`;
---

<ContentLayout entry={{ data: { title: entry.data.title } }}>
  <fragment slot="head">
    <title>URSIO – {entry.data.title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={`https://ursio.ch/tools/${slug}/`} />
    <meta property="og:title" content={`URSIO – ${entry.data.title}`} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="article" />
    <meta property="og:url" content={`https://ursio.ch/tools/${slug}/`} />
  </fragment>

  <section class="tool-page">

    <header>
      <h1>{entry.data.title}</h1>
    </header>

    <article>
      <Content />
    </article>

  </section>
</ContentLayout>
